.input {
 @apply .appearance-none .block .w-full .bg-gray-200 .text-gray-700 .border .border-gray-200 .rounded-sm .py-3 .px-4 .leading-tight;
  &:focus {
    @apply .outline-none .bg-white .border-gray-500;
  }
}

.label {
  @apply .block .uppercase .tracking-wide .text-gray-700 .text-xs .font-bold .mb-2;
}

.required:after {
  @apply .text-red-700;
  content:" *";
}
